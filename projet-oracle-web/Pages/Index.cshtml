<style>
    .trapezoid-container {
        position: relative;
        width: 100%;
        height: 45vh;
        overflow: hidden;
    }

    .trapezoid {
        position: absolute;
        width: 100%;
        height: 100%;
        background: linear-gradient(to right, #1e90ff, #4682b4);
        transform: skewY(-5deg);
        transform-origin: top left;
        top: 0;
        left: 0;
    }

    .content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding-top: 50px;
        color: #fff;
    }

        .content h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .content a {
            color: #ffebcd;
            text-decoration: none;
            font-weight: bold;
        }

            .content a:hover {
                color: #ff4500;
                text-decoration: underline;
            }


</style>

<script>
    let currentIndex = 0;
    const images = document.querySelectorAll('.carousel-image');
    const totalImages = images.length;

    function showNextImage() {
        images[currentIndex].classList.remove('active');
        currentIndex = (currentIndex + 1) % totalImages;
        images[currentIndex].classList.add('active');
    }

    setInterval(showNextImage, 3000); // Change l'image toutes les 3 secondes
</script>
