@page
@model projet_oracle_web.Pages.ListerEmployeModel
@{
}

<div class="text-center p-4 mb-4 bg-primary text-white rounded wow fadeInUp" data-wow-delay="0.1s">
    <h1>Liste des Employés</h1>
    <p>Gestion des employés dans la base Oracle</p>
</div>

<div class="d-flex justify-content-end mb-3 wow fadeIn" data-wow-delay="0.3s">
    <a href="/AjouterEmploye" class="btn btn-success btn-lg">
        Ajouter un employé
    </a>
</div>

<table class="table table-hover table-striped wow fadeInUp" data-wow-delay="0.5s">
    <thead class="table-dark">
        <tr>
            <th>EMPNO</th>
            <th>ENAME</th>
            <th>JOB</th>
            <th>MGR</th>
            <th>HIREDATE</th>
            <th>SAL</th>
            <th>COMM</th>
            <th>DEPTNO</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model.Employees)
        {
            // Vérifier si cet employé a été récemment modifié
            bool isModified = TempData["ModifiedEmployee"] != null && TempData["ModifiedEmployee"].ToString() == emp.EMPNO.ToString();

            <tr class="animated-row @(isModified ? "table-success" : "")">
                <td>@emp.EMPNO</td>
                <td>@emp.ENAME</td>
                <td>@emp.JOB</td>
                <td>@emp.MGR</td>
                <td>@emp.HIREDATE.ToString("dd MMM yyyy")</td>
                <td>@emp.SAL.ToString("C")</td>
                <td>@emp.COMM</td>
                <td>@emp.DEPTNO</td>
                <td class="d-flex justify-content-start" style="gap: 10px;">
                    <a href="@Url.Page("/ModifierEmploye", new { id = emp.EMPNO })" class="btn btn-warning btn-sm btn-animate">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                    <a href="@Url.Page("/SupprimerEmploye", new { id = emp.EMPNO })" class="btn btn-danger btn-sm btn-animate">
                        <i class="bi bi-trash"></i> Supprimer
                    </a>
                </td>


            </tr>
        }
    </tbody>
</table>

<!-- Afficher le Toast en cas de succès -->
@if (TempData["Message"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["Message"]
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

<!-- Bootstrap Icons for buttons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
