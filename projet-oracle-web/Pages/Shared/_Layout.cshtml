<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - projet_oracle_web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projet_oracle_web.styles.css" asp-append-version="true" />
</head>
<body>
    @if (ViewContext.RouteData.Values["Page"]?.ToString() == "/Index")
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-blue shadow-sm py-3">
                <div class="container">
                    <a class="navbar-brand" style="color : white ; font-size : 19px" asp-area="" asp-page="/Index">projet_oracle_web</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" style="color : white ; font-size : 18px" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color : white ; font-size : 18px " asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                    <div class="d-flex">
                        <a class="btn btn-connexion rounded-pill px-4 py-2" asp-area="" asp-page="/Authentification">
                            Se Connecter
                        </a>
                    </div>
                </div>
            </nav>
        </header>
    }
    @if (ViewContext.RouteData.Values["Page"]?.ToString() == "/ListerEmploye" ||
    ViewContext.RouteData.Values["Page"]?.ToString() == "/ListerDepartement")
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">projet_oracle_web</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ||
    ViewContext.RouteData.Values["Page"]?.ToString() == "/ListerEmploye" ||
    ViewContext.RouteData.Values["Page"]?.ToString() == "/ListerDepartement")
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - projet_oracle_web - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<style>

    .bg-blue {
        background: linear-gradient(to right, #1e90ff, #4682b4);
    }
    /* Style pour les éléments du menu */
    .navbar-nav .nav-item {
        margin-right: 20px; /* Espacement entre les éléments du menu */
    }

    /* Style pour les liens du menu */
    .navbar-nav .nav-link {
        color: #ffffff; /* Texte blanc */
        padding: 10px 20px; /* Espacement autour du texte */
        border-radius: 5px; /* Coins arrondis pour les liens */
        transition: background-color 0.3s ease, transform 0.3s ease; /* Transition fluide */
    }

        /* Effet de survol pour les liens */
        .navbar-nav .nav-link:hover {
            background-color: #007bff; /* Bleu clair au survol */
            color: #ffffff; /* Maintenir le texte en blanc */
            transform: scale(1.1); /* Agrandir légèrement au survol */
        }

    /* Style pour l'élément actif du menu */
    .navbar-nav .nav-item.active .nav-link {
        background-color: #28a745; /* Fond vert pour l'élément actif */
        color: #ffffff; /* Texte en blanc pour l'élément actif */
    }

    /* Appliquer des styles pour le bouton de navigation mobile */
    .navbar-toggler {
        background-color: #007bff; /* Bleu pour le bouton mobile */
    }

    /* Appliquer un fond plus clair et de l'ombre au header */
    header {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Ombre légère pour un effet de profondeur */
    }

    .btn-connexion {
        background-color: burlywood; /* Orange vif pour attirer l'attention */
        color: black; /* Texte blanc */
        border: 2px solid #ffffff; /* Bordure blanche pour contraste */
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-connexion:hover {
            background-color: #ff6347; /* Rouge orangé clair au survol */
            transform: scale(1.1); /* Agrandir légèrement au survol */
        }

</style>